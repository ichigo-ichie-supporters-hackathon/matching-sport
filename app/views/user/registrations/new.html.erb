<div class = "user-authentication">
  <h2>新規登録</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render"user/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :name, "名前" %><br />
      <%= f.text_field :name, autofocus: true %>
    </div>

    <div class="field">
      <%= f.label :age, "年齢" %><br />
      <%= f.number_field :age %>
    </div>

    <div class="field">
      <%= f.label :gender, "性別" %><br />
      <%= f.select :gender,  @gender_options, { include_blank: '性別を選択してください' }, class: 'form-control' %>
    </div>

    <div class="field">
      <%= f.label :email,  "メールアドレス"%><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="field">
      <%= f.label :password, "パスワード"%>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> 文字以上で入力)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, "パスワードの確認"%><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>
    <div class="field">
      <%= f.label :profile_picture, "プロフィール画像" %><br />
      <%= f.file_field :profile_picture %>
     </div>
    <div class="actions">
      <%= f.submit "登録する" %>
    </div>
  <% end %>

  <%= render"user/shared/links" %>
</div>