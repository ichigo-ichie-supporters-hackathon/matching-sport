<div id="event-detail">
  <h1>イベント詳細</h1>

  <div class="event-info">
    <h2>イベント情報</h2>
    <p><strong>住所:</strong> <%= @main_event.address %></p>
    <p><strong>開始時間:</strong> <%= @main_event.start_time.strftime('%Y年%m月%d日 %H:%M') %></p>
    <p><strong>終了時間:</strong> <%= @main_event.end_time.strftime('%Y年%m月%d日 %H:%M') %></p>
    <p><strong>コメント:</strong> <%= @main_event.comment %></p>
    <p><strong>参加人数:</strong> <%= @main_event.people_count %></p>
    <p><strong>作成者:</strong> <%= @main_event.user.name %> (<%= @main_event.user.gender == 0 ? '男性' : '女性' %>)</p>
  </div>

  <% if @linked_events.exists? %>
    <div class="matched-events">
      <h2>マッチングしたイベント</h2>
      <% @linked_events.each do |event| %>
        <div class="linked-event">
          <p><strong>住所:</strong> <%= event.address %></p>
          <p><strong>作成者:</strong> <%= event.user.name %> (<%= event.user.gender == 0 ? '男性' : '女性' %>)</p>
          <p><strong>コメント:</strong> <%= event.comment %></p>
        </div>
      <% end %>
    </div>
  <% else %>
    <p class="no-matched-events">マッチングイベントはありません。</p>
  <% end %>
</div>
